# YangLogistics Backend Environment Variables
# Copy this file to .env and update the values

# Server Configuration
NODE_ENV=production
PORT=3000

# Database Configuration
DATABASE_PATH=/app/data/database.json

# JWT Secret (IMPORTANT: Change this in production!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# CORS Configuration
CORS_ORIGINS=https://yanglogistics-portal.web.app,https://logistics.digitalcoresystem.com

# Coolify Configuration
COOLIFY_APP_NAME=yanglogistics-backend
COOLIFY_DOMAIN=logistics.digitalcoresystem.com

# Optional: Database backup configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
